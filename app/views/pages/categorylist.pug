extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-borderd
        thead
          tr
            th 分类名字
        tbody
          each item in categories
            tr(class=`item-id-${item._id}`)
              td #{item.name}
              td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href=`../admin/category/update/${item._id}`) 修改
              td 
                button.btn.btn-danger.del(type="button", data-id=item._id) 删除
  script(src="/js/categoryDelete.js")